{
  "compilerOptions": {
    "target": "es2016" ,
    "lib": ["DOM", "ESNext"],                                        
    "paths": {
      "@/*":["./src/*"]
    },                                     
    "outDir": "./dist",                                   
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "noImplicitReturns": true,                        
    "skipLibCheck": true,
    "experimentalDecorators": true 
  },
  "include": ["./src"]
}